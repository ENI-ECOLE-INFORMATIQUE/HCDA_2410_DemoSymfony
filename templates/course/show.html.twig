{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détail du cours: {{ course.name }}</h1>
    <p>{{ course.content }}</p>
    <p>Durée en jours: {{ course.duration }}</p>
    <p>Date de création: {{ course.dateCreated|date('d/m/Y') }}</p>
    <p>Publié: {{ course.published? "Oui":"Non" }}</p>
    <p>Nombre de formateurs: {{ course.trainers | length }}</p>
    <p>Liste des formateurs : </p>
    <ul>
        {% for trainer in course.trainers %}
            <li>{{ trainer.firstname ~ ' ' ~ trainer.lastname }}</li>
        {% endfor %}
    </ul>

{% endblock %}

{% block title %}Détail d'un cours | {{ parent() }}{% endblock %}