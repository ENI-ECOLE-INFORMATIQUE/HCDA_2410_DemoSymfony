{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détail du cours: {{ course.name }}</h1>
    <p>{{ course.content }}</p>
    <p>Durée en jours: {{ course.duration }}</p>
    <p>Date de création: {{ course.dateCreated|date('d/m/Y') }}</p>
    <p>Publié: {{ course.published? "Oui":"Non" }}</p>

{% endblock %}

{% block title %}Détail d'un cours | {{ parent() }}{% endblock %}